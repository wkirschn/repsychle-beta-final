

<h1>
    {{title}} {{recycling.objectName}} - {{this.user.username}}
</h1>

<form method="POST">



    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="https://repsychle-production-new.herokuapp.com/image/{{recycling.file}}" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">Object: {{recycling.objectName}}</h5>
            <h6 class="card-title">EcoScore: {{recycling.objectEcoScore}}</h6>
            <p class="card-text">Description: {{recycling.objectDescription}}</p>

        </div>
    </div>
<hr>

    <fieldset>
        <label for="objectName" class="col-2">
            Object Name *:
        </label>
        <input name="objectName" id="objectName" required type="text" value="{{recycling.objectName}}"/>
    </fieldset>
    <fieldset>
        <label for="objectDescription" class="col-2">
            Object Description *:
        </label>
        <textarea rows="3" cols="40" name="objectDescription" id="objectDescription" required type="text">{{recycling.objectDescription}}</textarea>
    </fieldset>

    <fieldset>
        <label for="objectEcoScore" class="col-2">
            Object EcoScore *:
        </label>
        <input name="objectEcoScore" id="objectEcoScore" required type="text" value="{{recycling.objectEcoScore}}">
    </fieldset>


    <fieldset>
        <label for="objectDisposalMethod" class="col-2">
            Disposal Method *:
        </label>

        <input name="objectDisposalMethod" id="objectDisposalMethod" required value="{{recycling.objectDisposalMethod}}"  />

    </fieldset>

    <fieldset>
        <label for="objectLong" class="col-2">
            Object Longitude *:
        </label>
        <input name="objectLong" id="objectLong" required type="number" value="{{recycling.objectLong}}"/>
    </fieldset>

    <fieldset>
        <label for="objectLat" class="col-2">
            Object Latitude *:
        </label>
        <input name="objectLat" id="objectLat" required type="number" value="{{recycling.objectLat}}"/>
    </fieldset>

    <fieldset>
        <label for="profile_id" class="col-2">
            Profile ID:
        </label>
        <select name="profile_id" id="profile_id">
            {{#if user}}

                <option>{{this.user.username}}</option>
            {{/if}}
        </select>
    </fieldset>

    <input type="submit" value="submit" class="btn btn-primary btn-block">



</form>
